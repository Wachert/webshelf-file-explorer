{% extends "extjsbase.html.twig" %}

{% block loaderscripts %}
<script type="text/javascript">
   window.onload = function()
   {
      document.body.innerHTML="";
      Ext.onReady(function()
      {
         Ext.MessageBox.show({
            closable:false,
            title: '{{title|raw}}',
            msg: '{{message|raw}}',
            buttons: null,
            icon: Ext.MessageBox.{{button|upper}}
        });
      });
   };
</script>
{% endblock %}
